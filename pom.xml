<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- 企业域名 -->
    <groupId>com.bitnei</groupId>
    <!-- 项目名称 -->
    <artifactId>ent.calc</artifactId>
    <!-- 语义化版本 -->
    <!-- https://semver.org/lang/zh-CN/ -->
    <version>0.4.x-alpha</version>
    <!-- 打包方式 -->
    <packaging>jar</packaging>

    <name>enterprise.calculation</name>
    <url>http://maven.apache.org</url>

    <!-- 公共属性 -->
    <properties>
        <!-- Storm Version -->
        <version.storm>1.0.3</version.storm>
        <!-- Simple Logging Facade for Java Version -->
        <version.slf4j>1.7.7</version.slf4j>
    </properties>

    <!-- 远程仓库 -->
    <repositories>
		<repository>
			<id>clojars.org</id>
			<url>http://clojars.org/repo</url>
		</repository>
        <!--<repository>-->
            <!--<id>nexus</id>-->
            <!--<name>Team Nexus Repository</name>-->
            <!--<url>http://218.205.184.127:8081/nexus/content/groups/public</url>-->
        <!--</repository>-->
	</repositories>

    <!-- 项目依赖 -->
	<dependencies>

        <!-- 北理大数据依赖开始 -->

        <!-- 主要使用了CTFO组件 -->
        <!-- http://218.205.184.127:8081/nexus/#nexus-search;gav~com.bitnei.bigdata~datacenter -->
        <!--<dependency>-->
            <!--<groupId>com.bitnei.bigdata</groupId>-->
            <!--<artifactId>datacenter</artifactId>-->
            <!--<version>2.4.2</version>-->
        <!--</dependency>-->

        <!-- 北理大数据依赖结束 -->

        <!-- Storm 依赖开始 -->

        <!-- https://mvnrepository.com/artifact/org.apache.storm/storm-core -->
        <dependency>
            <groupId>org.apache.storm</groupId>
            <artifactId>storm-core</artifactId>
            <version>${version.storm}</version>
            <scope>provided</scope>
            <!-- 排除传递性依赖 -->
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- https://mvnrepository.com/artifact/org.apache.storm/storm-kafka -->
        <dependency>
            <groupId>org.apache.storm</groupId>
            <artifactId>storm-kafka</artifactId>
            <version>1.0.3</version>
            <exclusions>
                <exclusion>
                    <artifactId>kafka-clients</artifactId>
                    <groupId>org.apache.kafka</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>guava</artifactId>
                    <groupId>com.google.guava</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- 目前里面有Base64编解码和其它一些组件继承, 暂时保持不变 -->
        <!-- https://mvnrepository.com/artifact/org.apache.storm/storm-starter -->
        <dependency>
            <groupId>org.apache.storm</groupId>
            <artifactId>storm-starter</artifactId>
            <version>${version.storm}</version>
        </dependency>

        <!-- Storm 依赖结束 -->

        <!-- 数据库依赖开始 -->

        <!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>5.1.18</version>
        </dependency>

        <!-- 这个包请不要升级先, 这是测试过与datacenter-2.4.2.jar兼容的版本 -->
        <!-- https://mvnrepository.com/artifact/redis.clients/jedis -->
        <dependency>
            <groupId>redis.clients</groupId>
            <artifactId>jedis</artifactId>
            <version>2.4.2</version>
        </dependency>

        <!-- 数据库依赖结束 -->

        <!-- 工具组件依赖开始 -->

        <!-- https://mvnrepository.com/artifact/com.alibaba/fastjson -->
        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
            <version>1.1.36</version>
        </dependency>

        <!-- https://mvnrepository.com/artifact/com.google.guava/guava -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>25.1-jre</version>
        </dependency>

        <!-- 工具组件依赖结束 -->

        <!-- 解决版本不一致依赖开始 -->

        <!-- 0.8.2.2 版本是与 0.8.2.0 完全兼容的最高版本 -->
        <!-- https://mvnrepository.com/artifact/org.apache.kafka/kafka-clients -->
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>0.8.2.0</version>
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- 解决日志组件不一致的问题 -->
        <!-- https://mvnrepository.com/artifact/org.slf4j/slf4j-api -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${version.slf4j}</version>
        </dependency>

        <!-- 日志组件简单实现, 用于开发时就地执行main函数 -->
        <!-- https://mvnrepository.com/artifact/org.slf4j/slf4j-simple -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${version.slf4j}</version>
            <scope>test</scope>
        </dependency>

        <!-- https://mvnrepository.com/artifact/com.yammer.metrics/metrics-core -->
        <dependency>
            <groupId>com.yammer.metrics</groupId>
            <artifactId>metrics-core</artifactId>
            <version>2.2.0</version>
            <exclusions>
                <exclusion>
                    <artifactId>slf4j-api</artifactId>
                    <groupId>org.slf4j</groupId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- 解决版本不一致依赖结束 -->

        <!-- IDEA注解开始 -->

        <!-- https://mvnrepository.com/artifact/org.jetbrains/annotations -->
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>16.0.2</version>
        </dependency>

        <!-- IDEA注解结束 -->

        <!-- 测试组件依赖开始 -->

        <!-- https://mvnrepository.com/artifact/junit/junit -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <!-- 测试组件依赖结束 -->

    </dependencies>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
	                <artifactId>maven-compiler-plugin</artifactId>
	                <version>2.3.2</version>
	                <configuration>
	                    <source>1.8</source>
	                    <target>1.8</target>
	                    <encoding>UTF-8</encoding>
	                    <compilerArguments>
	                        <extdirs>${basedir}/lib</extdirs>
	                    </compilerArguments>
	                </configuration>
	            </plugin>
			</plugins>
		</pluginManagement>
    </build>
</project>
